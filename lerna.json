{
  "lerna": "3.4.0",
  "version": "1.0.0",
  "changelog": {
    "repo": "fastlib"
  },
  "command": {
    "create": {
      "homepage": "https://github.com/rjoydip/fastlib",
      "license": "MIT"
    },
    "publish": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "gitRemote": "upstream",
      "message": "chore(release): publish %s"
    },
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "ignoreChanges": [
    "**/__fixtures__/**",
    "**/__tests__/**",
    "**/*.md"
  ],
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "packages": [
    "core/*",
    "modules/*"
  ],
  "npmClient": "npm"
}
