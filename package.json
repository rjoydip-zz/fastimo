{
  "name": "fastlib",
  "version": "1.0.0",
  "description": "Sclable monorepo based node project structure with fastify",
  "private": false,
  "scripts": {
    "lerna": "lerna",
    "help": "lerna --help",
    "global": "npm uninstall -g fastlib && npm install -g .",
    "clean": "npm run lerna clean && rm -rf node_modules/ && npm install && npm run lerna bootstrap",
    "setup": "npm run lerna clean && npm install && npm run lerna bootstrap && npm run lerna link",
    "lint": "eslint . --ignore-path .eslintignore --cache",
    "test": "cross-env NODE_ENV=test jest",
    "gen:pkg": "node scripts/index.js g -p",
    "gen:mod": "node scripts/index.js g -m",
    "example": "NODE_ENV=dev node core/fastlib"
  },
  "bin": {
    "fastlib": "packages/cli/index.js"
  },
  "dependencies": {
    "common-tags": "^1.8.0",
    "g": "^2.0.1",
    "nodemon": "^1.18.4",
    "shelljs": "^0.8.2",
    "yargs-parser": "^10.1.0"
  },
  "devDependencies": {
    "cross-env": "^5.2.0",
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-prettier": "^2.6.2",
    "jest": "^23.6.0",
    "jest-circus": "^23.6.0",
    "lerna": "^3.4.0",
    "prettier": "^1.14.2"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "main": "jest.config.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjoydip/fastlib.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rjoydip/fastlib/issues"
  },
  "homepage": "https://github.com/rjoydip/fastlib#readme"
}
